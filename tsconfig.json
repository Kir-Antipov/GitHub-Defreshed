{
    "include": ["./src/**/*", "./test/**/*", "./package.json"],
    "compilerOptions": {
        "target": "ES6",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./build",
        "paths": {
            "@fixers/*": ["fixers/*"],
            "@fixers": ["fixers"],
            "@components/*": ["ui/components/*"],
            "@images/*": ["ui/assets/images/*"],
            "@assets/*": ["ui/assets/*"],
            "@styles/*": ["ui/styles/*"],
            "@ui/*": ["ui/*"],
            "@utils/*": ["utils/*"],
            "@config": ["../package.json"],
        },
    },
}
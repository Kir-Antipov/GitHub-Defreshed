{
    "include": ["./src/**/*", "./package.json"],
    "compilerOptions": {
        "target": "ES6",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./build",
        "paths": {
            "@fixers/*": ["fixers/*"],
            "@views/*": ["views/*"],
            "@components/*": ["views/components/*"],
            "@utils/*": ["utils/*"],
            "@config": ["../package.json"],
        },
    },
}